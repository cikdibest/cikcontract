generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Log 1: Gelen tüm istekler
model CallLog {
  id            String   @id @default(uuid())
  correlationId String   @unique
  ip            String
  url           String
  method        String
  requestBody   Json
  responseBody  Json
  durationMs    Int
  createdAt     DateTime @default(now())

  errorLog      ErrorLog?
}

// Log 2: Oluşan hatalar
model ErrorLog {
  id             String   @id @default(uuid())
  correlationId  String   @unique
  errorMessage   String
  stackTrace     String?
  createdAt      DateTime @default(now())

  callLog        CallLog  @relation(fields: [correlationId], references: [correlationId])
}

// Log 3: Gerçekleşen işlemler
model TransactionLog {
  id            String   @id @default(uuid())
  correlationId String
  walletAddress String
  txHash        String   @unique
  amount        Decimal
  type          String   // yerine enum, artık serbest string
  version       String   // v1, v2, v3 yerine serbest string
  isSuccess     Boolean
  createdAt     DateTime @default(now())
}
